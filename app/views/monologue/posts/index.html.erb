<div class="col-md-9">
	<div class="row">
		<% @index_posts = Monologue::Post.all.order('created_at desc') %>
		<% @index_posts.each do |post| %>
			<div class="col-md-6">
				<div class="bg">
					<i class="bg-image"></i>
				</div>
				<div class="main-wrapper">
					<div class="blog-post-wrapper">
						<div class="blog-post">
							<figure class="blog-post--image">
								<!-- <img src="assets/images/exm-blog-2.jpg" alt="" /> -->
								<%= image_tag "exm-blog-2.jpg" %>
							</figure>
							<div class="blog-post--description">
								<a href="<%= post.full_url %>">
									<h3><%= post.title %></h3>
								</a>
								<p class="info">by <b><%= post.user.name %></b>
								<span><%= I18n.localize(post.published_at.to_date, format: :long) %></span>
								<p><%= post.lead %></p>
							</div>
							<div class="blog-post--tools">
								<a href="<%= post.full_url %>">
									<i class="icon icon-view">
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
											<path d="M 18 5 L 18 7 L 23.5625 7 L 11.28125 19.28125 L 12.71875 20.71875 L 25 8.4375 L 25 14 L 27 14 L 27 6 L 27 5 L 26 5 L 18 5 z M 5 9 L 5 27 L 23 27 L 23 14 L 21 16 L 21 25 L 7 25 L 7 11 L 16 11 L 18 9 L 5 9 z"></path>
										</svg>
										<span>View</span>
									</i>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>

	<% if @page %>
		<%= render partial: "pagination" %>
	<% end %>
</div>
