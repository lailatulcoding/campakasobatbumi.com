<div class="col-md-9 blog-detail-desc">
  <%= image_tag('exm-blog-bg.jpg', class: 'img-wrap-d-b', width:'100%') %>
  <h1><%= @post.title %></h1>
  <p class="author-desc">By <strong><%= @post.user.name %></strong> <%= I18n.localize(@post.published_at.to_date, format: :long) %></p>
  <hr>
  <p class="blog-desc"><%= raw @post.content %></p>

  <form style="margin-bottom: 20px;">
    <h3 class="text-left mb-2 mt-2">Leave a Reply</h3>

    <div class="md-form">
    <input type="text" id="form3" class="form-control">
    <label for="form3">Your name</label>
    </div>

    <div class="md-form">
    <input type="text" id="form2" class="form-control">
    <label for="form2">Your email</label>
    </div>

    <div class="md-form">
    <textarea type="text" id="form8" class="md-textarea" style="height: 100px"></textarea>
    <label for="form8">Your message</label>
    </div>

    <div class="text-left">
    <button class="btn btn-unique btn-b-d">Send a Comment</button>
    </div>
  </form>
</div>
